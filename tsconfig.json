{
  "compilerOptions": {
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "src",
    "module": "commonjs",
    "target": "es2019",
    "lib": [
      "esnext",
      "esnext.array",
      "esnext.asynciterable",
      "esnext.intl",
      "esnext.symbol"
    ],
    "declaration": false,
    "removeComments": false,
    "pretty": false,
    "noImplicitAny": true,
    "sourceMap": false,
    "esModuleInterop": true,
    "skipDefaultLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": "./src/",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
  },
  "exclude": [
    "tests",
    "node_modules",
  ]
}